---
const { backgroundColor = 'bg-main' } = Astro.props
---

<button
	class='font-medium rounded-md leading-4 border-none bg-white transition-all ease-in duration-200'
>
	<span
		class={`button_top block ${backgroundColor} border-white rounded-md text-white border-2 py-2 px-6 -translate-y-[0.15rem] transition-all ease-in duration-100`}
		><slot /></span
	></button
>

<style>
	button:hover .button_top {
		transform: translateY(-0.25em);
	}

	button:active .button_top {
		transform: translateY(0);
	}
</style>
