	{
		socialNetwork.map((social) => (
			<a
				class={`group block rounded-md p-1 text-current transition-all duration-200 ease-in ${hoverBg} ${hoverTextColor}`}
				href={social.url}
				aria-label={social.name}
			>
				<Icon name={`mdi:${social.name}`} class={'h-7 w-7'} />
			</a>
		))
	}
</div>
