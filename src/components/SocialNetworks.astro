---
import { Icon } from 'astro-icon'
import { ARC_2023 } from '../data/ARC_2023'
const { socialNetwork } = ARC_2023

const { hoverTextColor = 'hover:text-main', locationId = '' } = Astro.props

const hoverBg = locationId.includes('estacionamiento') ? 'hover:bg-neutral-700' : 'hover:bg-white'
---

<div class='grid grid-flow-col items-center gap-1 w-fit'>
