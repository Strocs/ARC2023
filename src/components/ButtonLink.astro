---
const {
	styles = { backgroundColor: 'bg-main', borderColor: 'border-main', textColor: 'text-main' },
	anchor,
	href,
	className,
	invertedColors,
	style,
	id,
	download
} = Astro.props

const Element = anchor ? 'a' : 'button'

const border = invertedColors ? styles.borderColor : id === 'estacionamiento-plaza-de-armas' ? 'border-neutral-700' : 'border-white'
const text = invertedColors ? styles.textColor : id === 'estacionamiento-plaza-de-armas' ? 'text-neutral-700' : 'text-white'
const background = invertedColors ? 'bg-white' : styles.backgroundColor
const shadow = invertedColors ? styles.backgroundColor : id === 'estacionamiento-plaza-de-armas' ? 'bg-neutral-700' : 'bg-white'
---

<Element
	class={`button w-fit font-medium rounded-md leading-4 border-none ${shadow} transition-all ease-in duration-200 ${className}`}
	href={href}
	style={style}
	id={id}
	download={download}
>
	<span
		class={`button_top block text-center ${background} ${border} rounded-md ${text} border-2 py-2 px-6 -translate-y-[0.15rem] transition-all ease-in duration-100`}
		><slot /></span
	>
</Element>

<style>
	.button:hover .button_top {
		transform: translateY(-0.25em);
	}

	.button:active .button_top {
		transform: translateY(0);
	}
</style>
