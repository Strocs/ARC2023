---
const { hoverBackgroundColor = 'hover:bg-white', link, Element } = Astro.props
---

<Element
	href={link}
	class={`${hoverBackgroundColor} group px-2 font-medium gap-1 py-1 ${Element === 'a' ? 'mt-10 ml-6' : 'self-end'} w-fit transition-all duration-200 cursor-pointer flex items-center`}
>
	<slot />
</Element>
