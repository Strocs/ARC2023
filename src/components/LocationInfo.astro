---
import { getLocationById } from '../utils/getLocationById'
import BackButton from './BackButton.astro'
import Centenario from './icons/Centenario.astro'
const { query } = Astro.props
const { id, title, extract, backgroundColor, textColor, locationImage } = getLocationById(query)

let newTitle = ''

if (title.includes('Estacionamiento')) {
	newTitle = title.replace('Estacionamiento', 'Estaciona_ miento')
} else if (title.includes('Arqueológico')) {
	newTitle = title.replace('Arqueológico', 'Arqueoló_ gico')
} else {
	newTitle = title
}
---

<section
	aria-label={id}
	id='location-info'
	class={`${backgroundColor} bg-texture flex flex-col justify-between bg-2xl pt-24 w-full md:max-w-md p-10 -right-[448px] opacity-0 h-full absolute z-10 motion-reduce:animate-none`}
	style={{ display: 'hidden' }}
>
	<div class="flex flex-col gap-4">
		<h2 class='text-6xl font-black py-2 leading-[3rem]'>{newTitle}</h2>
		<p class='font-normal'>{extract}</p>
		<a class="font-bold text-lg" href={id}>Más información</a>
	</div>
	<BackButton textColor={textColor} Element='button' />
</section>

<style>
	section {
		transition: right 500ms;
		transition-timing-function: cubic-bezier(0.45, 0.05, 0.55, 0.95);
	}
</style>
