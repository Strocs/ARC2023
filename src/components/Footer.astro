---
import IMREC from './icons/IMREC.astro'
import LaSerena from './icons/LaSerena.astro'
import Seremi from './icons/Seremi.astro'

const { fixed, backgroundColor = 'bg-main', id } = Astro.props
const text = id === 'estacionamiento-plaza-de-armas' ? 'text-neutral-700' : ''
---

<footer
	class={`flex flex-col md:flex-row justify-between items-center w-full py-2 space-x-2 md:px-14 ${text} ${backgroundColor} ${
		fixed ? 'fixed' : ''
	} bottom-0 left-0 right-0 z-50 transition-[background-color] duration-200 ease-in bg-texture bg-4xl sm:bg-xl`}
>
	<div class='flex justify-center space-x-4 md:items-center md:space-x-8 h-fit'>
		<div class='flex items-center space-x-4 flex-shrink-0 w-fit'>
			<p class='text-sm md:text-base'>Organiza:</p>
			<Seremi />
			<IMREC />
		</div>
		<div class='flex items-center space-x-4'>
			<p class='text-sm md:text-base'>Colabora:</p>
			<LaSerena />
		</div>
	</div>
	<div class='hidden gap-4 items-center justify-around md:grid md:grid-flow-col'>
		<p class='text-lg font-bold leading-3'>ARC 2023</p>
		|
		<p class='font-light leading-3'>
			Desarrollado por <a class='underline' target='_blank' href='https://github.com/Strocs'
				>Strocs</a
			>
		</p>
	</div>
</footer>
