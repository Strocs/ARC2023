---
import TrackVitals from '../components/TrackVitals.astro'

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/png' href='/favicon.png' />
		<meta name='generator' content={Astro.generator} />
		<meta
			name='description'
			content='La nueva versión del Festival de las Artes Región de Coquimbo busca incidir en la forma en la que la comunidad habita su ciudad, a través de un nuevo formato que transformará los espacios públicos en un circuito artístico caminable, en el que convergerá la curiosidad del ciudadano de a pie con la belleza presente en las distintas disciplinas que conforman el sector artístico de nuestra región.'
		/>
		<title>{title}</title>
		<meta name='twitter:card' content='summary' />
		<meta name='twitter:site' content='@festivalarc' />
		<meta property='og:title' content='Pronto Festival ARC 2023' />
		<meta
			property='og:description'
			content='La nueva versión del Festival de las Artes Región de Coquimbo busca incidir en la forma en la que la comunidad habita su ciudad, a través de un nuevo formato que transformará los espacios públicos en un circuito artístico caminable, en el que convergerá la curiosidad del ciudadano de a pie con la belleza presente en las distintas disciplinas que conforman el sector artístico de nuestra región.'
		/>
		<meta property='og:image' content='/cardArc.png' />
		<meta property='og:url' content='https://www.festivalarc.cl' />
		<meta property='og:site_name' content='Pronto Festival ARC 2023' />
		<script defer src='/_vercel/insights/script.js'></script>
	</head>
	<body class='text-white h-full min-h-screen'>
		<TrackVitals />
		<slot />
	</body>
</html>

<style>
	html {
		background-color: #1d011a;
	}
</style>
